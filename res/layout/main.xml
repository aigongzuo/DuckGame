	<!-- save scores -->
	<LinearLayout
	  android:id="@+id/scoreDialog"
	  android:layout_gravity="center_vertical|center_horizontal"
	  android:layout_width="200dp"
	  android:layout_height="wrap_content"
	  android:orientation="vertical" 
	  android:visibility="gone" android:background="@drawable/sl_dialog_background">
		<LinearLayout 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:orientation="horizontal">
			<TextView 
				android:text="保存得分？" 
				android:id="@+id/scoreText" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:paddingLeft="10pt" 
				android:paddingRight="10pt" 
				android:paddingBottom="5pt" 
				android:paddingTop="5pt"/>
		</LinearLayout>
		<LinearLayout 
			android:layout_height="wrap_content" 
			android:orientation="horizontal" android:layout_width="fill_parent">
			<Button 
				android:text="提交保存" 
				android:id="@+id/globalButton" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"
	  		/>
			<!-- <Button 
				android:text="Local" 
				android:id="@+id/localButton"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"
	  		/> -->
			<Button 
				android:text="跳过" 
				android:id="@+id/skipButton" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"
	  		/>
		
		</LinearLayout>
	
	</LinearLayout>

 	<!-- restart game -->
	<LinearLayout
	  android:id="@+id/restartDialog"
	  android:layout_gravity="center_vertical|center_horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:orientation="vertical" 
	  android:background="@drawable/sl_dialog_background"
	  android:visibility="gone">
		<LinearLayout 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:orientation="horizontal">
			<TextView 
				android:text="再玩儿一次？" 
				android:id="@+id/replayText" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:paddingLeft="10pt" 
				android:paddingRight="10pt" 
				android:paddingBottom="5pt" 
				android:paddingTop="5pt"/>
		</LinearLayout>
		<LinearLayout 
			android:layout_height="wrap_content" 
			android:orientation="horizontal" android:layout_width="fill_parent">
			<Button 
				android:text="重来" 
				android:id="@+id/replayBtn"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"/>
			<Button 
				android:text="菜单" 
				android:id="@+id/menuBtn"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"/>
		</LinearLayout>
	
	</LinearLayout>
 
 	<LinearLayout
	  android:id="@+id/settingsDialog"
	  android:layout_gravity="center_vertical|center_horizontal"
	  android:layout_width="200dp"
	  android:layout_height="wrap_content"
	  android:orientation="vertical" 
	  android:background="@drawable/sl_dialog_background"
	  android:visibility="gone">
	  	<TextView 
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:text="游戏设置选项"
	  	/>
	  	<CheckBox
	  		android:id="@+id/settSoundEnable"
	  		android:text="启动声音"
	  		android:checked="true" 
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  	/>
	  	<CheckBox
	  		android:id="@+id/settVibroEnable"
	  		android:text="启动震动"
	  		android:checked="true" 
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  	/>
	  	<RadioGroup 
	  		android:id="@+id/RadioGroup01" 
	  		android:layout_width="wrap_content" 
	  		android:layout_height="wrap_content">
		  	<RadioButton 
		  		android:checked="true"
		  		android:text="手机感应" 
		  		android:id="@+id/useAccelerometer" 
		  		android:layout_width="wrap_content" 
		  		android:layout_height="wrap_content"/>
	  		<RadioButton 
		  		android:text="点击屏幕" 
		  		android:id="@+id/useTouchScreen" 
		  		android:layout_width="wrap_content" 
		  		android:layout_height="wrap_content"/>
	  	</RadioGroup>	  	
	  <LinearLayout
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content">
	  	<Button
	  		android:id="@+id/settSaveBtn"
	  		android:text="保存"
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:layout_weight="1"
	  	/>
	  	<Button
	  		android:id="@+id/settCloseBtn"
	  		android:text="关闭"
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:layout_weight="1"
	  	/>
	  </LinearLayout>
    </LinearLayout>
    
 	<LinearLayout
	  android:id="@+id/historyScoresDialog"
	  android:layout_gravity="center_vertical|center_horizontal"
	  android:layout_width="200dp"
	  android:layout_height="wrap_content"
	  android:orientation="vertical" 
	  android:layout_margin="10dp"
	  android:visibility="gone" android:background="@drawable/sl_dialog_background">
		<LinearLayout 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_gravity="center_horizontal"
			android:orientation="horizontal">
			<TextView 
				android:text="历史得分" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:paddingLeft="14pt" 
				android:paddingRight="14pt" 
				android:paddingBottom="5pt" 
				android:paddingTop="5pt"/>
		</LinearLayout>
		<LinearLayout 
			android:layout_height="wrap_content" 
			android:orientation="horizontal" android:layout_width="fill_parent">
			<TextView 
				android:text="第一名：" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"
	  		/>
			<TextView 
				android:text="" 
				android:id="@+id/tv_first" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"
	  		/>
		</LinearLayout>
		<LinearLayout 
			android:layout_height="wrap_content" 
			android:orientation="horizontal" android:layout_width="fill_parent">
			<TextView 
				android:text="第二名：" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"
	  		/>
			<TextView 
				android:text="" 
				android:id="@+id/tv_second" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"
	  		/>
		</LinearLayout>
		<LinearLayout 
			android:layout_height="wrap_content" 
			android:orientation="horizontal" android:layout_width="fill_parent">
			<TextView 
				android:text="第三名：" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"
	  		/>
			<TextView 
				android:text="" 
				android:id="@+id/tv_third" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"
	  		/>
		</LinearLayout>
		<Button 
		    android:layout_gravity="center_horizontal"
			android:text="返回" 
			android:id="@+id/btn_back" 
			android:layout_width="80dp" 
			android:layout_height="wrap_content"
  		/>
	</LinearLayout>
    
    <LinearLayout
	  android:id="@+id/backMenuDialog"
	  android:layout_gravity="center_vertical|center_horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:orientation="vertical" 
	  android:visibility="gone" android:background="@drawable/sl_dialog_background">
		<LinearLayout 
			android:layout_width="200dp" 
			android:layout_height="wrap_content" 
			android:orientation="horizontal">
			<TextView 
				android:text="退出游戏?" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:paddingLeft="14pt" 
				android:paddingRight="14pt" 
				android:paddingBottom="5pt" 
				android:paddingTop="5pt"/>
		</LinearLayout>
		<LinearLayout 
			android:layout_height="wrap_content" 
			android:orientation="horizontal" android:layout_width="fill_parent">
			<Button 
				android:text="返回" 
				android:id="@+id/backResumeButton" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"
	  		/>
			<Button 
				android:text="菜单" 
				android:id="@+id/backMenuButton" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"
	  		/>
			<Button 
				android:text="退出" 
				android:id="@+id/backExitButton" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"
	  		/>
		</LinearLayout>
	</LinearLayout>
</FrameLayout>
